{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    // "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*spec.ts"
  ]
}